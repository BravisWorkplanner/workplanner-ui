@page "/workers/{Id:int}"
@using Microsoft.AspNetCore.Components
@inherits WorkerEditBase

@if (WorkerGetResult == null)
{
    <SpinKitDoubleBounce/>
}
else
{
    <MudGrid>
        <MudItem xs="4">
            <EditForm Model="@WorkerGetResult"
                      OnValidSubmit="@OnValidSubmit">
                <DataAnnotationsValidator/>

                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5">Details for @WorkerGetResult.WorkerId</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>

                    <MudCardContent>
                        <MudTextField Label="Name"
                                      HelperText="Name of the worker"
                                      @bind-Value="@WorkerGetResult.Name"
                                      For="@(() => WorkerGetResult.Name)"/>

                        <MudTextField Label="Company"
                                      Class="mt-4"
                                      HelperText="Company of the worker"
                                      @bind-Value="@WorkerGetResult.Company"
                                      For="@(() => WorkerGetResult.Company)"/>

                        <MudTextField Label="Phone number"
                                      Class="mt-4"
                                      HelperText="Phone number of the worker"
                                      @bind-Value="@WorkerGetResult.PhoneNumber"
                                      For="@(() => WorkerGetResult.PhoneNumber)"/>
                    </MudCardContent>

                    <MudCardActions>
                        <MudButton
                            ButtonType="ButtonType.Submit"
                            Variant="Variant.Filled"
                            StartIcon="@Icons.Material.Filled.Save"
                            Color="Color.Info"
                            Size="Size.Large"
                            class="ml-auto">
                            Save
                        </MudButton>
                    </MudCardActions>
                </MudCard>

            </EditForm>

        </MudItem>
    </MudGrid>
}