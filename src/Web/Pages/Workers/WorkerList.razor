@page "/workers"
@inherits WorkerListBase

@if (WorkerList == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
<MudTable Items="@WorkerList.Take(20)" Bordered="true" Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Workers</MudText>
        <MudSpacer />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Email</MudTh>
        <MudTh>Phone</MudTh>
        <MudTh>Edit</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Object number">Object number</MudTd>
        <MudTd DataLabel="Description">Email</MudTd>
        <MudTd DataLabel="Address">Address</MudTd>
        @{ var uri = $"/workers/1"; }
    <MudTd DataLabel="Edit">
        <MudLink Href="@uri">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Title="Edit" />
        </MudLink>
    </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>

</MudTable>
}